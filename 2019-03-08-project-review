# word reverser
# after four tries,
# managed to reverse engineer 
# my own word reverser.

word = "insomniac"
reverso = ""

for i in range(len(word):
     reverso += word[-i]





word = "insomniac"
duplicate = ""

for i in range(1,len(word)+1):
     duplicate += word[-i]

